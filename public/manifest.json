{
    "manifest_version": 3,
    "name": "Color Hunter",
    "description": "Export the color palette of a website in a single click",
    "version": "1.0.1",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "assets/color-scanner.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "<all_urls>"
    ]
}